{% extends 'base.html.twig' %}

{% block title %}Go Swap - Dashboard{% endblock %}

{% block body %}
<div class="min-h-screen">
    {% include 'partials/header.html.twig' %}
    
    {% include 'partials/flash_messages.html.twig' %}

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div
            data-controller="dismissible"
            data-dismissible-key-value="welcome-banner-dismissed"
            class="px-4 py-6 sm:px-0 hidden"
        >
            <div class="bg-white dark:bg-zinc-950 rounded-lg shadow-lg p-6 border border-gray-200 dark:border-gray-700 relative">
                <button
                    data-action="click->dismissible#dismiss"
                    class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition cursor-pointer"
                    aria-label="Close welcome banner"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-2 pr-8">
                    Welcome to Go Swap! üéâ
                </h1>
                <p class="text-gray-600 dark:text-gray-400">
                    Track your Pok√©mon GO collection like a pro.
                </p>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="px-4 py-6 sm:px-0">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Pok√©dex Collection</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                {% for category in pokedexCategories %}
                <div data-controller="modal" class="bg-white dark:bg-zinc-950 rounded-lg shadow-lg p-6 border-2 border-gray-300 dark:border-gray-600 hover:border-violet-600 dark:hover:border-violet-600 hover:shadow-xl transition">
                    <div class="flex flex-col items-center text-center mb-4">
                        <div class="flex items-center gap-2 mb-3">
                            <img src="{{ asset('images/pokedex/' ~ category.icon) }}" alt="{{ category.name }}" class="w-8 h-8 border-2 border-white dark:border-gray-800 rounded-full">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{{ category.name }}</h3>
                        </div>
                        <p class="text-xl mb-3">
                            <span class="font-bold text-gray-900 dark:text-white">{{ category.count }}</span>
                            <span class="text-base text-gray-500 dark:text-gray-400">/ {{ category.total }}</span>
                        </p>

                        {# Progress Bar with percentage inside #}
                        <div class="w-full bg-gray-400 dark:bg-zinc-700 rounded-full h-4 overflow-hidden relative flex items-center justify-center">
                            <div class="bg-violet-600 dark:bg-violet-600 h-4 rounded-full transition-all duration-500 absolute left-0 top-0" style="width: {{ category.percentage }}%"></div>
                            <span class="text-xs font-bold {{ category.percentage > 0 ? 'text-white' : 'text-gray-500 dark:text-gray-400' }} relative z-10">{{ category.percentage }}%</span>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex gap-2">
                        <a href="{{ path('app_pokedex', category.slug ? {variant: category.slug} : {hideCompleted: 'false'}) }}" class="flex-1 flex items-center justify-center px-4 py-2 bg-violet-600 hover:bg-violet-700 text-white rounded-lg font-medium transition">
                            View
                        </a>
                        <button
                            data-action="click->modal#open"
                            class="flex-1 flex items-center justify-center px-4 py-2 bg-white dark:bg-black border-2 border-gray-300 dark:border-zinc-600 hover:border-gray-400 dark:hover:border-zinc-500 text-gray-700 dark:text-gray-300 rounded-lg font-medium transition cursor-pointer"
                        >
                            Details
                        </button>
                    </div>

                    <!-- Modal -->
                    <div data-modal-target="modal" class="hidden fixed inset-0 bg-gray-900/80 dark:bg-black/80 z-50 flex items-center justify-center p-4" data-action="click->modal#closeOnBackdrop">
                        <div class="bg-white dark:bg-zinc-950 rounded-lg shadow-xl max-w-md w-full max-h-[90vh] flex flex-col border-2 border-gray-200 dark:border-zinc-700">
                            <div class="flex justify-between items-center p-6 pb-4">
                                <h3 class="text-xl font-bold text-gray-900 dark:text-white">{{ category.name }} - Generation Stats</h3>
                                <button data-action="click->modal#close" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 cursor-pointer">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </div>
                            <div class="h-px bg-gray-300 dark:bg-zinc-700 mx-6"></div>
                            <div class="overflow-y-auto flex-1 p-6 pt-4">
                                <div class="space-y-3">
                                    {% for generation, totalCount in category.totalGenerationStats %}
                                    {% set ownedCount = category.generationStats[generation] ?? 0 %}
                                    {% set isComplete = ownedCount == totalCount and totalCount > 0 %}
                                    {% set percentage = totalCount > 0 ? ((ownedCount / totalCount) * 100)|round : 0 %}
                                    <a href="{{ path('app_pokedex', category.slug ? {variant: category.slug, generation: generation, hideCompleted: 'false'} : {generation: generation, hideCompleted: 'false'}) }}"
                                       class="block rounded hover:opacity-80 transition cursor-pointer overflow-hidden">
                                        {# Progress Bar as background #}
                                        <div class="w-full bg-gray-400 dark:bg-zinc-800 rounded overflow-hidden relative">
                                            <div class="{{ isComplete ? 'bg-emerald-700 dark:bg-emerald-700' : 'bg-violet-600 dark:bg-violet-600' }} transition-all duration-500 absolute left-0 top-0 h-full" style="width: {{ percentage }}%"></div>
                                            <div class="relative z-10 flex justify-between items-center py-2 px-3">
                                                <span class="font-medium {{ percentage > 50 ? 'text-white' : 'text-white dark:text-gray-300' }}">{{ generation|title }}</span>
                                                <div class="flex items-center gap-2">
                                                    <span class="font-bold {{ percentage > 50 ? 'text-white' : (isComplete ? 'text-white dark:text-emerald-600' : 'text-white dark:text-white') }}">{{ ownedCount }}</span>
                                                    <span class="{{ percentage > 50 ? 'text-white/80' : 'text-white/80 dark:text-gray-400' }}">/</span>
                                                    <span class="font-bold {{ percentage > 50 ? 'text-white' : 'text-white dark:text-white' }}">{{ totalCount }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="h-px bg-gray-300 dark:bg-zinc-700 mx-6"></div>
                            <div class="p-6 pt-4">
                                <div class="flex justify-between items-center">
                                    <span class="font-semibold text-gray-900 dark:text-white">Total</span>
                                    <div class="flex items-center gap-2">
                                        <span class="font-bold text-xl text-gray-900 dark:text-white">{{ category.count }}</span>
                                        <span class="text-gray-500 dark:text-gray-400">/</span>
                                        <span class="font-bold text-xl text-violet-600 dark:text-violet-600">{{ category.total }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        <!-- Other Collections -->
        <div class="px-4 py-6 sm:px-0">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Collections Overview</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- PvP Card -->
                <div class="bg-white dark:bg-zinc-950 rounded-lg shadow-lg p-6 border-2 border-gray-300 dark:border-gray-600 hover:border-violet-600 dark:hover:border-violet-600 hover:shadow-xl transition cursor-pointer">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-violet-100 dark:bg-violet-900/30 rounded-lg p-3">
                            <span class="text-3xl">‚öîÔ∏è</span>
                        </div>
                        <div class="ml-4 flex-1">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">PvP Collection</h3>
                            <p class="text-2xl font-bold text-violet-600 dark:text-violet-600">0</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Battle-ready Pok√©mon</p>
                        </div>
                    </div>
                </div>

                <!-- Lists Card -->
                <a href="{{ path('app_custom_lists') }}" class="bg-white dark:bg-zinc-950 rounded-lg shadow-lg p-6 border-2 border-gray-300 dark:border-gray-600 hover:border-violet-600 dark:hover:border-violet-600 hover:shadow-xl transition cursor-pointer">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-green-100 dark:bg-green-900/30 rounded-lg p-3">
                            <span class="text-3xl">üìù</span>
                        </div>
                        <div class="ml-4 flex-1">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">My Lists</h3>
                            <p class="text-2xl font-bold text-green-600 dark:text-green-400">{{ customListsCount }}</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Custom lists</p>
                        </div>
                    </div>
                </a>

                <!-- Stats Card -->
                <div class="bg-white dark:bg-zinc-950 rounded-lg shadow-lg p-6 border-2 border-gray-300 dark:border-gray-600 hover:border-violet-600 dark:hover:border-violet-600 hover:shadow-xl transition cursor-pointer">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-violet-100 dark:bg-violet-900/30 rounded-lg p-3">
                            <span class="text-3xl">üìä</span>
                        </div>
                        <div class="ml-4 flex-1">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Statistics</h3>
                            <p class="text-2xl font-bold text-violet-600 dark:text-violet-600">0%</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Overall completion</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
