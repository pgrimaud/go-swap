{% extends 'base.html.twig' %}

{% block title %}Go Swap - Dashboard{% endblock %}

{% block body %}
<div class="min-h-screen">
    {% include 'partials/header.html.twig' %}

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div 
            data-controller="dismissible"
            data-dismissible-key-value="welcome-banner-dismissed"
            class="px-4 py-6 sm:px-0 hidden"
        >
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 border border-gray-200 dark:border-gray-700 relative">
                <button 
                    data-action="click->dismissible#dismiss"
                    class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition cursor-pointer"
                    aria-label="Close welcome banner"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2 pr-8">
                    Welcome to Go Swap! üéâ
                </h1>
                <p class="text-gray-600 dark:text-gray-400">
                    Track your Pok√©mon GO collection like a pro.
                </p>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="px-4 py-6 sm:px-0">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Pok√©dex Collection</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                {% for category in pokedexCategories %}
                <div data-controller="modal" class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 border-2 border-gray-300 dark:border-gray-600 hover:border-indigo-600 dark:hover:border-indigo-500 hover:shadow-xl transition">
                    <div class="flex flex-col items-center text-center mb-4">
                        <div class="flex items-center gap-2 mb-3">
                            <img src="{{ asset('images/pokedex/' ~ category.icon) }}" alt="{{ category.name }}" class="w-8 h-8 border-2 border-white dark:border-gray-800 rounded-full">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{{ category.name }}</h3>
                        </div>
                        <p class="text-3xl mb-1">
                            <span class="font-bold text-gray-900 dark:text-white">{{ category.count }}</span>
                            <span class="text-base text-gray-500 dark:text-gray-400">/ {{ category.total }}</span>
                        </p>
                        <span class="text-sm font-medium px-2 py-0.5 rounded bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-400">{{ category.percentage }}%</span>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex gap-2">
                        <a href="{{ path('app_pokedex', category.slug ? {variant: category.slug} : {hideCompleted: 'false'}) }}" class="flex-1 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium text-center transition">
                            View
                        </a>
                        <button
                            data-action="click->modal#open"
                            class="flex-1 px-4 py-2 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 rounded-lg font-medium transition cursor-pointer"
                        >
                            Details
                        </button>
                    </div>

                    <!-- Modal -->
                    <div data-modal-target="modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4" data-action="click->modal#closeOnBackdrop">
                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full max-h-[90vh] flex flex-col">
                            <div class="flex justify-between items-center p-6 pb-4 border-b border-gray-200 dark:border-gray-600">
                                <h3 class="text-xl font-bold text-gray-900 dark:text-white">{{ category.name }} - Generation Stats</h3>
                                <button data-action="click->modal#close" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 cursor-pointer">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </div>
                            <div class="overflow-y-auto flex-1 p-6 pt-4">
                                <div class="space-y-3">
                                    {% for generation, totalCount in category.totalGenerationStats %}
                                    {% set ownedCount = category.generationStats[generation] ?? 0 %}
                                    {% set isComplete = ownedCount == totalCount and totalCount > 0 %}
                                    <a href="{{ path('app_pokedex', category.slug ? {variant: category.slug, generation: generation, hideCompleted: 'false'} : {generation: generation, hideCompleted: 'false'}) }}"
                                       class="flex justify-between items-center py-2 px-3 bg-gray-50 dark:bg-gray-700 rounded hover:bg-gray-100 dark:hover:bg-gray-600 transition cursor-pointer {{ isComplete ? 'border-2 border-emerald-600/60 dark:border-emerald-500/50' : '' }}">
                                        <span class="font-medium text-gray-700 dark:text-gray-300">{{ generation|title }}</span>
                                        <div class="flex items-center gap-2">
                                            <span class="font-bold {{ isComplete ? 'text-emerald-600 dark:text-emerald-500' : 'text-gray-900 dark:text-white' }}">{{ ownedCount }}</span>
                                            <span class="text-gray-500 dark:text-gray-400">/</span>
                                            <span class="font-bold text-indigo-600 dark:text-indigo-400">{{ totalCount }}</span>
                                        </div>
                                    </a>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="p-6 pt-4 border-t border-gray-200 dark:border-gray-600">
                                <div class="flex justify-between items-center">
                                    <span class="font-semibold text-gray-900 dark:text-white">Total</span>
                                    <div class="flex items-center gap-2">
                                        <span class="font-bold text-xl text-gray-900 dark:text-white">{{ category.count }}</span>
                                        <span class="text-gray-500 dark:text-gray-400">/</span>
                                        <span class="font-bold text-xl text-indigo-600 dark:text-indigo-400">{{ category.total }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        <!-- Other Collections -->
        <div class="px-4 py-6 sm:px-0">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Collections Overview</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- PvP Card -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 border-2 border-gray-300 dark:border-gray-600 hover:border-indigo-600 dark:hover:border-indigo-500 hover:shadow-xl transition cursor-pointer">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-purple-100 dark:bg-purple-900/30 rounded-lg p-3">
                            <span class="text-3xl">‚öîÔ∏è</span>
                        </div>
                        <div class="ml-4 flex-1">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">PvP Collection</h3>
                            <p class="text-2xl font-bold text-purple-600 dark:text-purple-400">0</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Battle-ready Pok√©mon</p>
                        </div>
                    </div>
                </div>

                <!-- Lists Card -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 border-2 border-gray-300 dark:border-gray-600 hover:border-indigo-600 dark:hover:border-indigo-500 hover:shadow-xl transition cursor-pointer">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-green-100 dark:bg-green-900/30 rounded-lg p-3">
                            <span class="text-3xl">üìù</span>
                        </div>
                        <div class="ml-4 flex-1">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">My Lists</h3>
                            <p class="text-2xl font-bold text-green-600 dark:text-green-400">0</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Custom lists</p>
                        </div>
                    </div>
                </div>

                <!-- Stats Card -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 border-2 border-gray-300 dark:border-gray-600 hover:border-indigo-600 dark:hover:border-indigo-500 hover:shadow-xl transition cursor-pointer">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-blue-100 dark:bg-blue-900/30 rounded-lg p-3">
                            <span class="text-3xl">üìä</span>
                        </div>
                        <div class="ml-4 flex-1">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Statistics</h3>
                            <p class="text-2xl font-bold text-blue-600 dark:text-blue-400">0%</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Overall completion</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
