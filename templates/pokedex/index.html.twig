{% extends 'base.html.twig' %}

{% block title %}Go Swap - PvP - Types{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}

    {% include 'partials/breadcrumb.html.twig' with {
        'links': [
            {'name': 'Pokédex', 'url': path('app_pokedex')}
        ]
    } %}
    <div x-data="{ openModal: false, selectedPokemon: null }">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 p-4 max-w-7xl mx-auto">
        {% for pokemon in allPokemon %}
            <div @click="openModal = true; selectedPokemon = {{ pokemon|json_encode|raw }}" class="bg-white dark:bg-gray-800 rounded shadow p-6 flex flex-col items-center text-center relative cursor-pointer hover:ring-2 hover:ring-blue-400 transition">
                <img src="{{ asset('images/pokemon/normal/' ~ pokemon.picture) }}" alt="Pikachu" class="w-24 h-24 mb-2" />
                <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-3">{{ pokemon.name }}</h3>
                <div class="absolute bottom-2 right-2 grid grid-cols-4 gap-1 w-14">
                    {% set button_labels = ['Normal', 'Shiny', 'XXL', 'XXS', 'Obscur', 'Purifié', 'Lucky', '100%'] %}
                    {% for label in button_labels %}
                        <label class="flex items-center cursor-pointer group">
                            <input type="checkbox" class="hidden peer" />
                            <div class="w-1.5 h-1.5 rounded-full bg-red-400 peer-checked:bg-green-400 transition-all duration-200"></div>
                        </label>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        </div>

        <!-- Modal -->
        <div x-show="openModal" x-transition class="fixed inset-0 z-50 flex items-center justify-center bg-black/40">
            <div @click.away="openModal = false" class="border border-solid border-gray-700 relative inline-block px-4 pt-5 pb-4 overflow-hidden text-left align-bottom transition-all transform bg-white rounded-lg shadow-xl dark:bg-gray-900 w-full max-w-xs sm:p-6 sm:align-middle mx-auto">
                <button @click="openModal = false" class="absolute top-2 right-2 text-gray-400 hover:text-gray-700">&times;</button>
                <template x-if="selectedPokemon">
                    <div>
                        <div class="flex flex-col items-center mb-4">
                            <img :src="'/images/pokemon/normal/' + selectedPokemon.picture" :alt="selectedPokemon.name" class="w-20 h-20 mb-2" />
                            <h2 class="text-lg font-bold text-gray-800 dark:text-white" x-text="selectedPokemon.name"></h2>
                        </div>
                        <div class="grid grid-cols-2 gap-2">
                            <template x-for="label in ['Normal', 'Shiny', 'XXL', 'XXS', 'Obscur', 'Purifié', 'Lucky', '100%']">
                                <div class="flex items-center gap-2">
                                    <input type="checkbox" :id="label" class="accent-green-500" />
                                    <label :for="label" class="text-gray-700 dark:text-gray-200 text-sm" x-text="label"></label>
                                </div>
                            </template>
                        </div>
                    </div>
                </template>
            </div>
        </div>
    </div>
{% endblock %}