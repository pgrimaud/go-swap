{% extends 'base.html.twig' %}

{% block title %}Pok√©dex - Go Swap{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
        {% include 'partials/header.html.twig' %}

        {# Filters Section #}
        <div class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700 sticky top-16 z-10">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
                <form method="get" action="{{ path('app_pokedex') }}" class="space-y-4">
                    {# Search Bar #}
                    <div class="space-y-3">
                        <div class="flex-1">
                            <input 
                                type="text" 
                                name="search" 
                                value="{{ currentSearch }}"
                                placeholder="üîç Search by name or number..."
                                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white"
                            >
                        </div>
                        <div class="flex gap-3">
                            <button type="submit" class="flex-1 inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-offset-gray-800 transition">
                                Search
                            </button>
                            <a href="{{ path('app_pokedex') }}" class="flex-1 inline-flex items-center justify-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-offset-gray-800 transition text-center">
                                Clear
                            </a>
                        </div>
                    </div>

                    {# Variant Filters #}
                    <div class="flex flex-wrap gap-2 items-center">
                        <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Show variants:</span>
                        <button type="submit" name="variant" value="" 
                                class="px-4 py-1.5 rounded-full text-sm font-medium transition inline-flex items-center gap-1.5 {{ currentVariant == '' ? 'bg-blue-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' }}">
                            All
                        </button>
                        <button type="submit" name="variant" value="normal" 
                                class="px-4 py-1.5 rounded-full text-sm font-medium transition inline-flex items-center gap-1.5 {{ currentVariant == 'normal' ? 'bg-blue-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' }}">
                            <img src="{{ asset('images/pokedex/normal.png') }}" alt="Normal" class="w-4 h-4">
                            Normal
                        </button>
                        <button type="submit" name="variant" value="shiny" 
                                class="px-4 py-1.5 rounded-full text-sm font-medium transition inline-flex items-center gap-1.5 {{ currentVariant == 'shiny' ? 'bg-blue-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' }}">
                            <img src="{{ asset('images/pokedex/shiny.png') }}" alt="Shiny" class="w-4 h-4">
                            Shiny
                        </button>
                        <button type="submit" name="variant" value="shadow" 
                                class="px-4 py-1.5 rounded-full text-sm font-medium transition inline-flex items-center gap-1.5 {{ currentVariant == 'shadow' ? 'bg-blue-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' }}">
                            <img src="{{ asset('images/pokedex/shadow.png') }}" alt="Shadow" class="w-4 h-4">
                            Shadow
                        </button>
                        <button type="submit" name="variant" value="purified" 
                                class="px-4 py-1.5 rounded-full text-sm font-medium transition inline-flex items-center gap-1.5 {{ currentVariant == 'purified' ? 'bg-blue-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' }}">
                            <img src="{{ asset('images/pokedex/purified.png') }}" alt="Purified" class="w-4 h-4">
                            Purified
                        </button>
                        <button type="submit" name="variant" value="lucky" 
                                class="px-4 py-1.5 rounded-full text-sm font-medium transition inline-flex items-center gap-1.5 {{ currentVariant == 'lucky' ? 'bg-blue-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' }}">
                            <img src="{{ asset('images/pokedex/lucky.png') }}" alt="Lucky" class="w-4 h-4">
                            Lucky
                        </button>
                        <button type="submit" name="variant" value="xxl" 
                                class="px-4 py-1.5 rounded-full text-sm font-medium transition inline-flex items-center gap-1.5 {{ currentVariant == 'xxl' ? 'bg-blue-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' }}">
                            <img src="{{ asset('images/pokedex/xxl.png') }}" alt="XXL" class="w-4 h-4">
                            XXL
                        </button>
                        <button type="submit" name="variant" value="xxs" 
                                class="px-4 py-1.5 rounded-full text-sm font-medium transition inline-flex items-center gap-1.5 {{ currentVariant == 'xxs' ? 'bg-blue-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' }}">
                            <img src="{{ asset('images/pokedex/xxs.png') }}" alt="XXS" class="w-4 h-4">
                            XXS
                        </button>
                        <button type="submit" name="variant" value="perfect" 
                                class="px-4 py-1.5 rounded-full text-sm font-medium transition inline-flex items-center gap-1.5 {{ currentVariant == 'perfect' ? 'bg-blue-600 text-white' : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600' }}">
                            <img src="{{ asset('images/pokedex/perfect.png') }}" alt="Perfect" class="w-4 h-4">
                            Perfect
                        </button>
                    </div>
                </form>

                {# Stats Bar #}
                <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                    <div class="flex flex-wrap gap-4 text-sm text-gray-600 dark:text-gray-400">
                        <span class="font-medium">
                            Showing: <span class="text-blue-600 dark:text-blue-400">{{ allPokemon|length }}</span> Pok√©mon
                        </span>
                        <span class="text-gray-400">|</span>
                        <span>
                            Owned: <span class="text-green-600 dark:text-green-400 font-medium">0</span> / {{ allPokemon|length }}
                        </span>
                        <span class="text-gray-400">|</span>
                        <span>
                            Complete (8/8): <span class="text-purple-600 dark:text-purple-400 font-medium">0</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        {# Pok√©mon Grid #}
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            {% if allPokemon is empty %}
                <div class="text-center py-12">
                    <div class="text-6xl mb-4">üîç</div>
                    <h3 class="text-xl font-semibold text-gray-700 dark:text-gray-300 mb-2">No Pok√©mon found</h3>
                    <p class="text-gray-500 dark:text-gray-400">Try adjusting your filters or search term</p>
                </div>
            {% else %}
                <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
                    {% for pokemon in allPokemon %}
                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-lg transition-all duration-200 hover:scale-105 cursor-pointer overflow-hidden">
                            {# Card Header #}
                            <div class="bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-700 dark:to-gray-750 px-3 py-2 flex justify-between items-center">
                                <span class="text-xs font-bold text-gray-500 dark:text-gray-400">#{{ '%04d'|format(pokemon.number) }}</span>
                                <span class="text-xs px-2 py-0.5 bg-white dark:bg-gray-800 rounded-full text-gray-600 dark:text-gray-300">
                                    Gen {{ pokemon.generation }}
                                </span>
                            </div>

                            {# Pok√©mon Image #}
                            <div class="p-4 flex justify-center">
                                <img 
                                    src="{{ asset('images/pokemon/normal/' ~ pokemon.picture) }}" 
                                    alt="{{ pokemon.name }}"
                                    loading="lazy"
                                    class="w-24 h-24 object-contain"
                                >
                            </div>

                            {# Pok√©mon Name #}
                            <div class="px-3 pb-2 text-center">
                                <h3 class="font-semibold text-gray-800 dark:text-white text-sm mb-2">
                                    {{ pokemon.name }}
                                </h3>
                            </div>

                            {# Variants Grid - 8 badges in 4x2 #}
                            <div class="px-3 pb-3">
                                <div class="grid grid-cols-4 gap-1.5">
                                    {# Normal #}
                                    <div class="aspect-square bg-gray-200 dark:bg-gray-700 rounded flex items-center justify-center hover:bg-gray-300 dark:hover:bg-gray-600 transition" title="Normal">
                                        <img src="{{ asset('images/pokedex/normal.png') }}" alt="Normal" loading="lazy" class="w-5 h-5 opacity-40">
                                    </div>
                                    {# Shiny #}
                                    <div class="aspect-square bg-gray-200 dark:bg-gray-700 rounded flex items-center justify-center hover:bg-gray-300 dark:hover:bg-gray-600 transition" title="Shiny">
                                        <img src="{{ asset('images/pokedex/shiny.png') }}" alt="Shiny" loading="lazy" class="w-5 h-5 opacity-40">
                                    </div>
                                    {# Shadow #}
                                    <div class="aspect-square bg-gray-200 dark:bg-gray-700 rounded flex items-center justify-center hover:bg-gray-300 dark:hover:bg-gray-600 transition" title="Shadow">
                                        <img src="{{ asset('images/pokedex/shadow.png') }}" alt="Shadow" loading="lazy" class="w-5 h-5 opacity-40">
                                    </div>
                                    {# Purified #}
                                    <div class="aspect-square bg-gray-200 dark:bg-gray-700 rounded flex items-center justify-center hover:bg-gray-300 dark:hover:bg-gray-600 transition" title="Purified">
                                        <img src="{{ asset('images/pokedex/purified.png') }}" alt="Purified" loading="lazy" class="w-5 h-5 opacity-40">
                                    </div>
                                    {# Lucky #}
                                    <div class="aspect-square bg-gray-200 dark:bg-gray-700 rounded flex items-center justify-center hover:bg-gray-300 dark:hover:bg-gray-600 transition" title="Lucky">
                                        <img src="{{ asset('images/pokedex/lucky.png') }}" alt="Lucky" loading="lazy" class="w-5 h-5 opacity-40">
                                    </div>
                                    {# XXL #}
                                    <div class="aspect-square bg-gray-200 dark:bg-gray-700 rounded flex items-center justify-center hover:bg-gray-300 dark:hover:bg-gray-600 transition" title="XXL">
                                        <img src="{{ asset('images/pokedex/xxl.png') }}" alt="XXL" loading="lazy" class="w-5 h-5 opacity-40">
                                    </div>
                                    {# XXS #}
                                    <div class="aspect-square bg-gray-200 dark:bg-gray-700 rounded flex items-center justify-center hover:bg-gray-300 dark:hover:bg-gray-600 transition" title="XXS">
                                        <img src="{{ asset('images/pokedex/xxs.png') }}" alt="XXS" loading="lazy" class="w-5 h-5 opacity-40">
                                    </div>
                                    {# Perfect #}
                                    <div class="aspect-square bg-gray-200 dark:bg-gray-700 rounded flex items-center justify-center hover:bg-gray-300 dark:hover:bg-gray-600 transition" title="Perfect">
                                        <img src="{{ asset('images/pokedex/perfect.png') }}" alt="Perfect" loading="lazy" class="w-5 h-5 opacity-40">
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </main>
    </div>
{% endblock %}
