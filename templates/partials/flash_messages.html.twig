{% for type, messages in app.flashes %}
    {% for message in messages %}
        <div
            data-controller="dismissible"
            data-dismissible-auto-dismiss-value="true"
            data-dismissible-delay-value="5000"
            class="mb-6"
        >
            <div class="rounded-lg p-4 border-2 flex items-center justify-between shadow-lg
                {% if type == 'success' %}
                    bg-green-50 dark:bg-green-950 border-green-500 dark:border-green-700
                {% elseif type == 'error' %}
                    bg-red-50 dark:bg-red-950 border-red-500 dark:border-red-700
                {% elseif type == 'warning' %}
                    bg-yellow-50 dark:bg-yellow-950 border-yellow-500 dark:border-yellow-700
                {% else %}
                    bg-blue-50 dark:bg-blue-950 border-blue-500 dark:border-blue-700
                {% endif %}
            ">
                <div class="flex items-center gap-3">
                    <span class="text-2xl">
                        {% if type == 'success' %}
                            ✅
                        {% elseif type == 'error' %}
                            ❌
                        {% elseif type == 'warning' %}
                            ⚠️
                        {% else %}
                            ℹ️
                        {% endif %}
                    </span>
                    <p class="font-medium
                        {% if type == 'success' %}
                            text-green-900 dark:text-green-100
                        {% elseif type == 'error' %}
                            text-red-900 dark:text-red-100
                        {% elseif type == 'warning' %}
                            text-yellow-900 dark:text-yellow-100
                        {% else %}
                            text-blue-900 dark:text-blue-100
                        {% endif %}
                    ">
                        {{ message }}
                    </p>
                </div>
                <button
                    data-action="click->dismissible#dismiss"
                    class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition cursor-pointer"
                    aria-label="Close notification"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    {% endfor %}
{% endfor %}
