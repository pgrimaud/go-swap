<div id="modal-details-{{ dex.type }}" class="fixed z-10 inset-0 hidden opacity-0 transition-opacity duration-300 overflow-y-auto bg-gray-900 bg-opacity-80">
    <div class="flex items-center justify-center min-h-screen">
        <div class="flex items-center flex-col bg-gray-800 border-gray-600 p-6 rounded-lg shadow-lg w-192 transform transition-transform duration-300 scale-95 border  text-center max-w-[600px] w-3/4">
            <h2 class="text-lg font-semibold mb-4">Details</h2>
            <table class="table-fixed text-center mb-4 text-gray-50">
                <thead>
                <tr>
                    <th>Generation</th>
                    <th>Code</th>
                    <th>Number</th>
                </tr>
                </thead>
                <tbody>
                    {% for title, details in dex.details %}
                       <tr>
                           <td>{{ title }}</td>
                           <td>{{ details.name }}</td>
                           <td>{{ details.total }}</td>
                       </tr>
                    {% endfor %}
                </tbody>
            </table>
        <button class="closeModal">Close</button>
        </div>
    </div>
</div>