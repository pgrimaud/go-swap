<div id="pvp-add" class="fixed z-10 inset-0 hidden opacity-0 transition-opacity duration-300 overflow-y-auto bg-gray-900 bg-opacity-80">
    <div class="flex items-center justify-center min-h-screen">
        <div class="flex items-center flex-col bg-gray-800 border-gray-600 p-6 rounded-lg shadow-lg w-192 transform transition-transform duration-300 scale-95 border  text-center max-w-[600px] w-3/4">
            <h2 class="text-lg font-semibold mb-4">Add PvP Pok√©mon</h2>
                <select id="pokemon-id" class="w-1/2 flex-grow-0 box-border p-1 border text-sm rounded-lg h-9 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500">
                    <option>-</option>
                    {% for pokemon in pokemons %}
                        <option value="{{ pokemon.id }}">#{{ pokemon.number }} - {{ pokemon.englishName }}</option>
                    {% endfor %}
                </select>

                <div class="hidden" id="pvp-moves">
                    <p class="my-3">Fast Move : </p>
                    <select id="fast-move" class="w-full flex-grow-0 box-border p-1 border text-sm rounded-lg h-9 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500">
                        <option value="">-</option>
                    </select>
                    <p class="my-3">Charged Move 1 : </p>
                    <select id="charged-move-1" class="w-full flex-grow-0 box-border p-1 border text-sm rounded-lg h-9 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500">
                        <option value="">-</option>
                    </select>
                    <p class="my-3">Charged Move 2 : </p>
                    <select id="charged-move-2" class="w-full flex-grow-0 box-border p-1 border text-sm rounded-lg h-9 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500">
                        <option value="">-</option>
                    </select>
                </div>
                <div class="hidden mt-6" id="pvp-league">
                    <select id="pvp-pokemon-league" class="w-full flex-grow-0 box-border p-1 border text-sm rounded-lg h-9 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500">
                        <option value="little_cup">Little Cup</option>
                        <option value="great_league">Great League</option>
                        <option value="ultra_league">Ultra League</option>
                    </select>

                    <label class="inline-flex items-center cursor-pointer mt-6">
                        <input type="checkbox" value="" id="pvp-is-shadow" class="sr-only peer">
                        <div class="toggle-bg-border relative w-11 h-6 outline-none rounded-full peer bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[1px] after:start-[1px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all border-gray-600 peer-checked:bg-gray-500"></div>
                        <span class="ms-3 text-xs lg:text-sm font-medium text-gray-300">Is Shadow?</span>
                    </label>

                    <input value="" id="pvp-rank" type="number" min="1" max="4096" class="w-full border-gray-500 bg-slate-600
                    text-white rank-input with-spin pl-2 pr-2 py-1 border rounded focus:outline-none focus:ring " placeholder="Rank">

                    <button class="mt-4 w-full max-lg:ml-0 h-25 align-items-center bg-gradient-to-r from-purple-800 to-green-500 text-white font-bold py-2 rounded"
                            type="button" id="pvp-save-pokemon">
                        Save
                    </button>
                </div>
            </select>
            <button class="closeModal mt-3">Close</button>
        </div>
    </div>
</div>