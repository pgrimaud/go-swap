{% extends 'base.html.twig' %}

{% block title %}Go Swap - PvP - Types{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}

    {% include 'partials/breadcrumb.html.twig' with {
        'links': [
            {'name': 'PvP', 'url': path('app_pvp_index')},
            {'name': 'Types', 'url': path('app_pvp_types')},
        ]
    } %}
    <div class="container px-6 py-5 mx-auto text-center">
        <div class="flex flex-col">
            <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
                    <div class="overflow-hidden border border-gray-200 dark:border-gray-700 md:rounded-lg">
                        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                            <thead class="bg-gray-50 dark:bg-gray-800">
                            <tr>
                                <th class="py-3.5 px-4 text-sm font-normal text-center text-gray-500 dark:text-gray-400">
                                    Type
                                </th>
                                <th class="px-4 py-3.5 text-sm font-normal text-center text-gray-500 dark:text-gray-400">
                                    Strong Against
                                </th>
                                <th class="px-4 py-3.5 text-sm font-normal text-center text-gray-500 dark:text-gray-400">
                                    Weak Against
                                </th>
                                <th class="px-4 py-3.5 text-sm font-normal text-center text-gray-500 dark:text-gray-400">
                                    Resistant To
                                </th>
                                <th class="px-4 py-3.5 text-sm font-normal text-center text-gray-500 dark:text-gray-400">
                                    Vulnerable To
                                </th>
                            </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200 dark:divide-gray-700 dark:bg-gray-900">
                            {% for row in typeData %}
                                <tr>
                                    <td class="px-4 py-4 text-sm font-medium text-gray-700 dark:text-gray-200 whitespace-nowrap text-center">
                                        <img src="{{ asset('images/type/' ~ row.type.icon) }}" class="w-[25px] inline-block">
                                    </td>
                                    <td class="px-4 py-4 text-sm text-gray-500 dark:text-gray-300 whitespace-nowrap text-center">
                                        {% for t in row.strongAgainst %}
                                            <img src="{{ asset('images/type/' ~ t.icon) }}" class="w-[25px] inline-block">
                                        {% endfor %}
                                    </td>
                                    <td class="px-4 py-4 text-sm text-gray-500 dark:text-gray-300 whitespace-nowrap text-center">
                                        {% for t in row.weakAgainst %}
                                            <img src="{{ asset('images/type/' ~ t.icon) }}" class="w-[25px] inline-block">
                                        {% endfor %}
                                    </td>
                                    <td class="px-4 py-4 text-sm text-gray-500 dark:text-gray-300 whitespace-nowrap text-center">
                                        {% for t in row.resistantTo %}
                                            <img src="{{ asset('images/type/' ~ t.icon) }}" class="w-[25px] inline-block">
                                        {% endfor %}
                                    </td>
                                    <td class="px-4 py-4 text-sm text-gray-500 dark:text-gray-300 whitespace-nowrap text-center">
                                        {% for t in row.vulnerableTo %}
                                            <img src="{{ asset('images/type/' ~ t.icon) }}" class="w-[25px] inline-block">
                                        {% endfor %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
