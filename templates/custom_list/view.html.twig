{% extends 'base.html.twig' %}

{% block title %}{{ customList.name }} - Go Swap{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-black">
    {% include 'partials/header.html.twig' %}
    
    {% include 'partials/flash_messages.html.twig' %}

    <main class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="px-4 py-6 sm:px-0">
            <!-- Page Header -->
            <div class="mb-6">
                <a href="{{ path('app_custom_lists') }}" class="inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-violet-600 dark:hover:text-violet-400 mb-4">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Back to My Lists
                </a>
                
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-4">
                    <!-- Left: Title, Description, Stats -->
                    <div class="flex flex-col gap-2">
                        <!-- Title + Badge -->
                        <div class="flex items-center gap-2 flex-wrap">
                            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">{{ customList.name }}</h1>
                            {% if customList.isPublic %}
                                <span class="px-2 sm:px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-400 text-xs sm:text-sm font-semibold rounded">
                                    Public
                                </span>
                            {% else %}
                                <span class="px-2 sm:px-3 py-1 bg-gray-100 dark:bg-zinc-800 text-gray-600 dark:text-gray-400 text-xs sm:text-sm font-semibold rounded inline-flex items-center gap-1">
                                    üîí Private
                                </span>
                            {% endif %}
                        </div>

                        <!-- Description -->
                        {% if customList.description %}
                            <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400">{{ customList.description }}</p>
                        {% endif %}

                        <!-- Count + Copy Numbers -->
                        <div class="flex items-center gap-3 flex-wrap">
                            <p class="text-sm text-gray-500 dark:text-gray-400">
                                {{ customList.pokemonCount }} Pok√©mon
                            </p>
                            {% if customList.pokemonCount > 0 %}
                                {% set pokemonNumbers = [] %}
                                {% for customListPokemon in customList.customListPokemonSortedByNumber %}
                                    {% set pokemonNumbers = pokemonNumbers|merge([customListPokemon.pokemon.number]) %}
                                {% endfor %}
                                <div data-controller="copy-list" data-copy-list-numbers-value="{{ pokemonNumbers|join(',') }}">
                                    <button 
                                        data-action="click->copy-list#copy"
                                        data-copy-list-target="button"
                                        class="px-2 py-1 border border-transparent text-xs font-semibold rounded text-white bg-violet-600 hover:bg-violet-700 dark:bg-violet-600 dark:hover:bg-violet-700 transition cursor-pointer"
                                        title="Copy Pok√©mon numbers">
                                        Copy
                                    </button>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Right: Action Buttons (full width on mobile, auto on desktop) -->
                    <div class="flex gap-2 sm:flex-shrink-0">
                        {% if customList.isPublic %}
                            <button 
                                data-controller="share"
                                data-share-url-value="{{ absolute_url(path('app_public_list', {uid: customList.uid})) }}"
                                data-action="click->share#copy"
                                class="flex-1 sm:flex-none px-3 sm:px-4 py-2 bg-white dark:bg-zinc-950 border-2 border-gray-300 dark:border-zinc-600 hover:border-gray-400 dark:hover:border-zinc-500 text-gray-700 dark:text-gray-300 rounded-lg text-sm sm:text-base font-medium transition cursor-pointer inline-flex items-center justify-center gap-2"
                                title="Copy share link"
                            >
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                                </svg>
                                Share
                            </button>
                        {% endif %}
                        <a href="{{ path('app_custom_list_edit', {id: customList.id}) }}" class="flex-1 sm:flex-none px-3 sm:px-4 py-2 bg-violet-600 hover:bg-violet-700 text-white rounded-lg text-sm sm:text-base font-medium transition cursor-pointer text-center">
                            Edit
                        </a>
                    </div>
                </div>
            </div>

            <!-- Pokemon Grid -->
            {% if customList.pokemonCount > 0 %}
                <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-8 xl:grid-cols-10 gap-2">
                    {% for customListPokemon in customList.customListPokemonSortedByNumber %}
                        {% set pokemon = customListPokemon.pokemon %}
                        {% set variant = customListPokemon.isShiny ? 'shiny' : 'normal' %}
                        <div class="bg-white dark:bg-zinc-950 rounded-lg shadow border border-gray-200 dark:border-gray-700 hover:border-violet-600 dark:hover:border-violet-600 hover:shadow-lg transition p-2 relative">
                            {% if customListPokemon.isShiny %}
                                <span class="absolute top-1 left-1 text-[14px] leading-none" title="Shiny">‚ú®</span>
                            {% endif %}
                            <img 
                                src="{{ asset('images/pokemon/' ~ variant ~ '/' ~ pokemon.slug ~ '.png') }}" 
                                alt="{{ pokemon.name }}"
                                class="w-full h-auto mb-1"
                                title="{{ pokemon.name }}{% if customListPokemon.isShiny %} (Shiny){% endif %}"
                            >
                            <p class="text-xs text-center font-medium text-gray-900 dark:text-white truncate">
                                {{ pokemon.name }}
                            </p>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="bg-white dark:bg-zinc-950 rounded-lg shadow-lg border-2 border-gray-300 dark:border-gray-600 p-12 text-center">
                    <div class="mx-auto w-24 h-24 bg-gray-100 dark:bg-zinc-800 rounded-full flex items-center justify-center mb-4">
                        <span class="text-5xl">üîç</span>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">No Pok√©mon yet</h2>
                    <p class="text-gray-600 dark:text-gray-400 mb-6">
                        This list is empty
                    </p>
                    <a href="{{ path('app_custom_list_edit', {id: customList.id}) }}" class="inline-flex items-center gap-2 px-6 py-3 bg-violet-600 hover:bg-violet-700 text-white rounded-lg font-medium transition cursor-pointer">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        Add Pok√©mon
                    </a>
                </div>
            {% endif %}
        </div>
    </main>
</div>
{% endblock %}
