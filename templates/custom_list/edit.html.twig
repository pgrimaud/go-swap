{% extends 'base.html.twig' %}

{% block title %}Edit {{ customList.name }} - Go Swap{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-black">
    {% include 'partials/header.html.twig' %}

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <div class="px-4 py-6 sm:px-0">
            <!-- Page Header -->
            <div class="mb-6">
                <a href="{{ path('app_custom_lists') }}" class="inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-violet-600 dark:hover:text-violet-400 mb-4">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Back to My Lists
                </a>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Edit List</h1>
                <p class="mt-2 text-gray-600 dark:text-gray-400">Update your list information and manage Pokémon</p>
            </div>

            <!-- Two Column Layout -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Left Column: Form -->
                <div class="bg-white dark:bg-zinc-950 rounded-lg shadow-lg border-2 border-gray-300 dark:border-gray-600 p-6">
                    <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">List Information</h2>
                    {{ form_start(form) }}
                        <div class="space-y-6">
                            <!-- Name Field -->
                            <div>
                                {{ form_label(form.name, null, {
                                    'label_attr': {'class': 'block text-sm font-medium text-gray-900 dark:text-white mb-2'}
                                }) }}
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>

                            <!-- Description Field -->
                            <div>
                                {{ form_label(form.description, null, {
                                    'label_attr': {'class': 'block text-sm font-medium text-gray-900 dark:text-white mb-2'}
                                }) }}
                                {{ form_widget(form.description) }}
                                {{ form_errors(form.description) }}
                            </div>

                            <!-- Is Public Checkbox -->
                            <label class="flex items-center gap-2 cursor-pointer">
                                {{ form_widget(form.isPublic) }}
                                <div>
                                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Make this list public</span>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">
                                        Public lists can be shared with anyone via a link
                                    </p>
                                </div>
                            </label>
                        </div>

                        <!-- Actions -->
                        <div class="mt-6">
                            <button type="submit" class="w-full px-6 py-3 bg-violet-600 hover:bg-violet-700 text-white rounded-lg font-medium transition cursor-pointer">
                                Save Changes
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>

                <!-- Right Column: Pokemon Management -->
                <div>
                    <!-- Pokemon List -->
                    <div class="bg-white dark:bg-zinc-950 rounded-lg shadow-lg border-2 border-gray-300 dark:border-gray-600 p-6 mb-6">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-xl font-bold text-gray-900 dark:text-white">Pokémon ({{ customList.pokemonCount }})</h2>
                        </div>

                        {% if customList.pokemonCount > 0 %}
                            <div class="grid grid-cols-3 gap-3 max-h-96 overflow-y-auto">
                                {% for customListPokemon in customList.customListPokemon %}
                                    {% set pokemon = customListPokemon.pokemon %}
                                    {% set variant = customListPokemon.isShiny ? 'shiny' : 'normal' %}
                                    <div 
                                        class="relative group"
                                        data-controller="remove-pokemon"
                                        data-remove-pokemon-url-value="{{ path('api_custom_list_pokemon_delete', {id: customListPokemon.id}) }}"
                                    >
                                        <div class="bg-gray-50 dark:bg-zinc-900 rounded-lg p-3 hover:bg-gray-100 dark:hover:bg-zinc-800 transition">
                                            {% if customListPokemon.isShiny %}
                                                <div class="absolute top-1 left-1 w-4 h-4 bg-yellow-400 rounded-full flex items-center justify-center z-10" title="Shiny">
                                                    <span class="text-xs">✨</span>
                                                </div>
                                            {% endif %}
                                            <img 
                                                src="{{ asset('images/pokemon/' ~ variant ~ '/' ~ pokemon.slug ~ '.png') }}" 
                                                alt="{{ pokemon.name }}"
                                                class="w-full h-auto mb-1"
                                            >
                                            <p class="text-xs text-center font-medium text-gray-900 dark:text-white truncate">
                                                {{ pokemon.name }}
                                            </p>
                                        </div>
                                        <button 
                                            data-action="click->remove-pokemon#remove"
                                            class="absolute top-1 right-1 w-5 h-5 bg-red-600 hover:bg-red-700 text-white rounded-full md:opacity-0 md:group-hover:opacity-100 transition flex items-center justify-center cursor-pointer z-20"
                                            title="Remove from list"
                                        >
                                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                            </svg>
                                        </button>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-center py-8">
                                <p class="text-gray-500 dark:text-gray-400">No Pokémon in this list yet</p>
                            </div>
                        {% endif %}
                    </div>

                    <!-- Add Pokemon Section -->
                    <div class="bg-white dark:bg-zinc-950 rounded-lg shadow-lg border-2 border-gray-300 dark:border-gray-600 p-6">
                        <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Add Pokémon</h2>
                        <div class="flex gap-2">
                            <input 
                                type="text" 
                                placeholder="Search by name or number..."
                                class="flex-1 px-4 py-2 border border-gray-300 dark:border-zinc-600 rounded-lg bg-white dark:bg-zinc-950 text-gray-900 dark:text-white focus:ring-2 focus:ring-violet-600 focus:border-transparent"
                            >
                            <button class="px-4 py-2 bg-violet-600 hover:bg-violet-700 text-white rounded-lg font-medium transition cursor-pointer">
                                Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
