{% extends 'base.html.twig' %}

{% block title %}Go Swap - PvP - Pokémon{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}

    {% include 'partials/breadcrumb.html.twig' with {
        'links': [
            {'name': 'PvP', 'url': path('app_pvp_index')},
            {'name': 'PvP Pokémon (' ~ totalUserPokemon ~ ')', 'url': path('app_pvp_pokemon')},
        ]
    } %}

<div class="container px-6 py-5 mx-auto">
    <section class="container px-4 mx-auto">
        {# Filters Section #}
        <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between mb-6">
            <div class="mx-auto sm:mx-0 inline-flex flex-wrap items-center bg-white rounded-lg dark:bg-gray-900 rtl:flex-row-reverse overflow-hidden border dark:border-gray-700">
                <button class="league-filter px-5 py-2 text-xs font-medium text-gray-600 transition-colors duration-200 bg-gray-100 sm:text-sm dark:bg-gray-800 dark:text-gray-300 border-0 border-r border-gray-200 dark:border-gray-700 first:rounded-l-lg last:rounded-r-lg last:border-0" data-league="">
                    All ({{ totalUserPokemon }})
                </button>
                <button class="league-filter px-5 py-2 text-xs font-medium text-gray-600 transition-colors duration-200 sm:text-sm dark:hover:bg-gray-800 dark:text-gray-300 hover:bg-gray-100 border-0 border-r border-gray-200 dark:border-gray-700 last:border-0" data-league="great_league">
                    <img src="{{ asset('images/league/great_league.png') }}" class="inline-block w-[20px]">
                    <span class="hidden sm:inline">({{ totalUserPokemonByLeague.great_league }})</span>
                </button>
                <button class="league-filter px-5 py-2 text-xs font-medium text-gray-600 transition-colors duration-200 sm:text-sm dark:hover:bg-gray-800 dark:text-gray-300 hover:bg-gray-100 border-0 border-r border-gray-200 dark:border-gray-700 last:border-0" data-league="ultra_league">
                    <img src="{{ asset('images/league/ultra_league.png') }}" class="inline-block w-[20px]">
                    <span class="hidden sm:inline">({{ totalUserPokemonByLeague.ultra_league }})</span>
                </button>
                <button class="league-filter px-5 py-2 text-xs font-medium text-gray-600 transition-colors duration-200 sm:text-sm dark:hover:bg-gray-800 dark:text-gray-300 hover:bg-gray-100 border-0 last:rounded-r-lg last:border-0" data-league="little_cup">
                    <img src="{{ asset('images/league/little_cup.png') }}" class="inline-block w-[20px]">
                    <span class="hidden sm:inline">({{ totalUserPokemonByLeague.little_cup }})</span>
                </button>
            </div>

            <div class="flex items-center gap-2 mt-4 sm:mt-0">
                <div class="relative flex items-center">
                    <span class="absolute">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mx-3 text-gray-400 dark:text-gray-600">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
                        </svg>
                    </span>
                    <input type="text" id="search-input" placeholder="Search" class="block w-full py-1.5 pr-5 text-gray-700 bg-white border border-gray-200 rounded-lg md:w-80 placeholder-gray-400/70 pl-11 rtl:pr-11 rtl:pl-5 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40">
                </div>
                <div x-data="{ isOpen: false }"
                     @keydown.escape.window="isOpen = false"
                     x-cloak
                     class="relative flex justify-center"
                     tabindex="0">
                    <button @click="isOpen = true" class="flex items-center justify-center px-5 py-2 text-sm tracking-wide text-white transition-colors duration-200 bg-blue-500 rounded-lg gap-x-2 hover:bg-blue-600 dark:hover:bg-blue-500 dark:bg-blue-600">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span>Add</span>
                    </button>

                    <a href="{{ path('app_pvp_pokemon_details') }}" class="hidden ml-2 sm:flex items-center justify-center px-5 py-2 text-sm tracking-wide text-white transition-colors duration-200 bg-blue-900 rounded-lg gap-x-2 hover:bg-blue-700 dark:hover:bg-blue-700 dark:bg-blue-900">
                        <span>Details</span>
                    </a>

                    {# Add Modal - Keep the existing modal code #}
                    <div x-show="isOpen"
                         x-transition:enter="transition duration-300 ease-out"
                         x-transition:enter-start="translate-y-4 opacity-0 sm:translate-y-0 sm:scale-95"
                         x-transition:enter-end="translate-y-0 opacity-100 sm:scale-100"
                         x-transition:leave="transition duration-150 ease-in"
                         x-transition:leave-start="translate-y-0 opacity-100 sm:scale-100"
                         x-transition:leave-end="translate-y-4 opacity-0 sm:translate-y-0 sm:scale-95"
                         class="fixed inset-0 z-10 overflow-y-auto"
                         aria-labelledby="modal-title" role="dialog" aria-modal="true">
                        <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity" x-show="isOpen" x-transition.opacity></div>
                        <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
                            <span class="hidden sm:inline-block sm:h-screen sm:align-middle" aria-hidden="true">&#8203;</span>

                            <div class="border border-solid border-gray-700 relative inline-block px-4 pt-5 pb-4 overflow-hidden text-left align-bottom transition-all transform bg-white rounded-lg shadow-xl dark:bg-gray-900 sm:my-8 w-full sm:max-w-sm sm:p-6 sm:align-middle">
                                <form class="mt-4" action="#" id="add-pvp-pokemon">
                                    <div class="mb-5 flex flex-col">
                                        <label class="text-gray-700 dark:text-gray-200" for="pokemon">Pokémon</label>
                                        <select name="pokemon" id="select-pokemon" class="pl-2 mb-3 p-1 text-sm mt-1 block w-full rounded-md border-gray-300 bg-white dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200">
                                            <option value=""></option>
                                            {% for pokemon in allPokemon %}
                                                <option value="{{ pokemon.id }}">{{ pokemon.name }} (#{{ pokemon.number }})</option>
                                            {% endfor %}
                                        </select>

                                        <label class="text-gray-700 dark:text-gray-200" for="league">League</label>
                                        <select name="league" class="pl-2 mb-3 p-1 text-sm mt-1 block w-full rounded-md border-gray-300 bg-white dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200">
                                            {% for leagueValue, league in leagues %}
                                                <option value="{{ leagueValue }}" {% if leagueValue == 'great_league' %}selected{% endif %}>{{ league }}</option>
                                            {% endfor %}
                                        </select>

                                        <label class="text-gray-700 dark:text-gray-200">IVs</label>
                                        <div class="grid grid-cols-3 gap-2 mt-1 mb-3">
                                            <input type="number" value="0" max="15" min="0" name="attack" placeholder="Attack" class="p-1 pl-3 text-sm block w-full rounded-md border-gray-300 bg-white dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200">
                                            <input type="number" value="0" max="15" min="0" name="defense" placeholder="Defense" class="p-1 pl-3 text-sm block w-full rounded-md border-gray-300 bg-white dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200">
                                            <input type="number" value="0" max="15" min="0" name="stamina" placeholder="Stamina" class="p-1 pl-3 text-sm block w-full rounded-md border-gray-300 bg-white dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200">
                                        </div>

                                        <label class="text-gray-700 dark:text-gray-200" for="league-rank">League Rank</label>
                                        <input type="number" value="1" max="4096" min="1" name="league-rank" placeholder="League Rank" class=" pl-3 mt-1 mb-3 p-1 text-sm block w-full rounded-md border-gray-300 bg-white dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200">

                                        <label class="text-gray-700 dark:text-gray-200" for="fast-move">Fast Move</label>
                                        <select name="fast-move" class="pl-2 mb-3 p-1 text-sm mt-1 block w-full rounded-md border-gray-300 bg-white dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200" disabled>
                                            <option value="">Select a Pokémon</option>
                                        </select>

                                        <label class="text-gray-700 dark:text-gray-200" for="charged-move1">Charged Move 1</label>
                                        <select name="charged-move1" class="pl-2 mb-3 p-1 text-sm mt-1 block w-full rounded-md border-gray-300 bg-white dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200" disabled>
                                            <option value="">Select a Pokémon</option>
                                        </select>

                                        <label class="text-gray-700 dark:text-gray-200" for="charged-move2">Charged Move 2</label>
                                        <select name="charged-move2" class="pl-2 mb-3 p-1 text-sm mt-1 block w-full rounded-md border-gray-300 bg-white dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200" disabled>
                                            <option value="">Select a Pokémon</option>
                                        </select>

                                        <label class="text-gray-700 dark:text-gray-200" for="type">Type</label>
                                        <select name="type" class="pl-2 mb-3 p-1 text-sm mt-1 block w-full rounded-md border-gray-300 bg-white dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200">
                                            {% for typeValue, type in types %}
                                                <option value="{{ typeValue }}">{{ type }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>

                                    <div class="mt-5 flex items-center justify-center gap-2">
                                        <button type="button" @click="isOpen = false" class="text-center px-4 sm:mx-2 w-full py-2.5 text-sm font-medium dark:text-gray-200 dark:border-gray-700 dark:hover:bg-gray-800 tracking-wide text-gray-700 capitalize transition-colors duration-300 transform border border-gray-200 rounded-md hover:bg-gray-100 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-40">
                                            Cancel
                                        </button>
                                        <button name="confirm" type="button" class="px-4 sm:mx-2 w-full py-2.5 sm:mt-0 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40">
                                            Confirm
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Pokemon Cards Grid #}
        <div id="pokemon-grid" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4">
            {% for pokemon in userPokemon %}
                {% set rankClass = '' %}
                {% if pokemon.leagueRank == 1 %}
                    {% set rankClass = 'bg-emerald-500' %}
                {% elseif pokemon.leagueRank <= 10 %}
                    {% set rankClass = 'bg-yellow-500' %}
                {% elseif pokemon.leagueRank <= 30 %}
                    {% set rankClass = 'bg-orange-500' %}
                {% else %}
                    {% set rankClass = 'bg-gray-400' %}
                {% endif %}

                <div class="pokemon-card cursor-pointer relative bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-xl transition-all duration-200 overflow-hidden border border-gray-200 dark:border-gray-700 hover:scale-105"
                     data-league="{{ pokemon.league }}"
                     data-number="{{ pokemon.pokemon.number }}"
                     data-name="{{ pokemon.pokemon.name|lower }}"
                     data-pokemon-id="{{ pokemon.id }}">
                    
                    {# League Badge - Top Left #}
                    <div class="absolute top-2 left-2 z-10">
                        <img src="{{ asset('images/league/' ~ pokemon.league ~ '.png') }}" class="w-6 h-6 drop-shadow-lg">
                    </div>

                    {# Type Badge - Top Right #}
                    {% if pokemon.type == 'shadow' or pokemon.type == 'purified' %}
                        <div class="absolute top-2 right-2 z-10">
                            <img src="{{ asset('images/icons/' ~ pokemon.type ~ '.png') }}" class="w-6 h-6 drop-shadow-lg">
                        </div>
                    {% endif %}

                    {# Pokemon Image #}
                    <div class="flex items-center justify-center p-4 bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-700 dark:to-gray-800">
                        <img src="{{ asset('/images/pokemon/normal/' ~ pokemon.pokemon.picture) }}" 
                             alt="{{ pokemon.pokemon.name }}" 
                             class="w-24 h-24 object-contain drop-shadow-lg">
                    </div>

                    {# Pokemon Info #}
                    <div class="p-3">
                        <h3 class="text-center font-semibold text-gray-800 dark:text-white text-sm mb-2 truncate">
                            {{ pokemon.pokemon.name }}
                        </h3>

                        {# Rank Badge - Large and Centered #}
                        <div class="flex justify-center">
                            <span class="inline-flex items-center justify-center px-4 py-1.5 rounded-full text-white font-bold text-base {{ rankClass }}">
                                #{{ pokemon.leagueRank }}
                            </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Empty State #}
        <div id="empty-state" class="hidden text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-200">No Pokémon found</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Try adjusting your filters or search query</p>
        </div>
    </section>
</div>

{# Details Modal - Opens when clicking a card #}
<div id="details-modal" 
     x-data="{ isOpen: false, pokemonData: {} }"
     @open-details.window="isOpen = true; pokemonData = $event.detail"
     @keydown.escape.window="isOpen = false"
     x-show="isOpen"
     x-cloak
     class="fixed inset-0 z-50 overflow-y-auto"
     aria-labelledby="modal-title" 
     role="dialog" 
     aria-modal="true">
    
    <div class="fixed inset-0 bg-black bg-opacity-75 transition-opacity" x-show="isOpen" x-transition.opacity @click="isOpen = false"></div>
    
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
        <span class="hidden sm:inline-block sm:h-screen sm:align-middle" aria-hidden="true">&#8203;</span>

        <div class="relative inline-block align-bottom bg-white dark:bg-gray-900 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg w-full border border-gray-700">
            {# Will be populated by JS with Pokemon details #}
            <div id="modal-content" class="p-6">
                <div class="text-center">
                    <div class="animate-spin inline-block w-8 h-8 border-4 border-current border-t-transparent text-blue-600 rounded-full" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const leagueFilters = document.querySelectorAll('.league-filter');
    const searchInput = document.getElementById('search-input');
    const pokemonCards = document.querySelectorAll('.pokemon-card');
    const pokemonGrid = document.getElementById('pokemon-grid');
    const emptyState = document.getElementById('empty-state');

    let currentLeague = '';
    let currentSearch = '';

    // Filter function
    function filterPokemon() {
        let visibleCount = 0;

        pokemonCards.forEach(card => {
            const cardLeague = card.dataset.league;
            const cardName = card.dataset.name;
            const cardNumber = card.dataset.number;

            const leagueMatch = !currentLeague || cardLeague === currentLeague;
            const searchMatch = !currentSearch || 
                                cardName.includes(currentSearch.toLowerCase()) ||
                                cardNumber.includes(currentSearch);

            if (leagueMatch && searchMatch) {
                card.classList.remove('hidden');
                visibleCount++;
            } else {
                card.classList.add('hidden');
            }
        });

        // Show/hide empty state
        if (visibleCount === 0) {
            pokemonGrid.classList.add('hidden');
            emptyState.classList.remove('hidden');
        } else {
            pokemonGrid.classList.remove('hidden');
            emptyState.classList.add('hidden');
        }
    }

    // League filter click
    leagueFilters.forEach(button => {
        button.addEventListener('click', function() {
            leagueFilters.forEach(btn => {
                btn.classList.remove('bg-gray-100', 'dark:bg-gray-800');
            });
            this.classList.add('bg-gray-100', 'dark:bg-gray-800');

            currentLeague = this.dataset.league;
            filterPokemon();
        });
    });

    // Search input
    searchInput.addEventListener('input', function() {
        currentSearch = this.value;
        filterPokemon();
    });

    // Pokemon data for modal
    const pokemonData = {
        {% for pokemon in userPokemon %}
        {{ pokemon.id }}: {
            id: {{ pokemon.id }},
            name: "{{ pokemon.pokemon.name }}",
            number: "{{ pokemon.pokemon.number }}",
            picture: "{{ pokemon.pokemon.picture }}",
            league: "{{ pokemon.league }}",
            leagueRank: {{ pokemon.leagueRank }},
            type: "{{ pokemon.type }}",
            attack: {{ pokemon.attack }},
            defense: {{ pokemon.defense }},
            stamina: {{ pokemon.stamina }},
            fastMove: {
                name: "{{ pokemon.fastMove.name }}",
                type: "{{ pokemon.fastMove.type.icon }}"
            },
            chargedMove1: {
                name: "{{ pokemon.chargedMove1.name }}",
                type: "{{ pokemon.chargedMove1.type.icon }}"
            },
            {% if pokemon.chargedMove2 %}
            chargedMove2: {
                name: "{{ pokemon.chargedMove2.name }}",
                type: "{{ pokemon.chargedMove2.type.icon }}"
            }
            {% else %}
            chargedMove2: null
            {% endif %}
        },
        {% endfor %}
    };

    // Open details modal on card click
    pokemonCards.forEach(card => {
        card.addEventListener('click', function() {
            const pokemonId = this.dataset.pokemonId;
            const data = pokemonData[pokemonId];
            
            if (!data) return;

            const rankClass = data.leagueRank === 1 ? 'text-emerald-400 bg-emerald-100/60' :
                             data.leagueRank <= 10 ? 'text-yellow-400 bg-yellow-100/60' :
                             data.leagueRank <= 30 ? 'text-orange-400 bg-orange-100/60' :
                             'text-gray-400 bg-gray-100/60';

            const leagueNames = {
                'great_league': 'Great League',
                'ultra_league': 'Ultra League',
                'little_cup': 'Little Cup'
            };

            const modalContent = document.getElementById('modal-content');
            modalContent.innerHTML = `
                <div class="flex items-start justify-between mb-4">
                    <div class="flex items-center gap-3">
                        <img src="/images/pokemon/normal/${data.picture}" class="w-20 h-20 object-contain">
                        <div>
                            <h3 class="text-xl font-bold text-gray-800 dark:text-white">${data.name}</h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400">#${data.number}</p>
                        </div>
                    </div>
                    <button @click="isOpen = false" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>

                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-2">
                            <img src="/images/league/${data.league}.png" class="w-6 h-6">
                            <span class="text-gray-700 dark:text-gray-300">${leagueNames[data.league]}</span>
                        </div>
                        <div class="px-4 py-1.5 rounded-full font-semibold ${rankClass}">
                            Rank #${data.leagueRank}
                        </div>
                    </div>

                    ${data.type !== 'normal' ? `
                    <div class="flex items-center gap-2">
                        <img src="/images/icons/${data.type}.png" class="w-6 h-6">
                        <span class="text-gray-700 dark:text-gray-300 capitalize">${data.type}</span>
                    </div>
                    ` : ''}

                    <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                        <h4 class="font-semibold text-gray-700 dark:text-gray-300 mb-2">IVs</h4>
                        <div class="grid grid-cols-3 gap-4 text-center">
                            <div>
                                <div class="text-2xl font-bold text-red-500">${data.attack}</div>
                                <div class="text-xs text-gray-500 dark:text-gray-400">Attack</div>
                            </div>
                            <div>
                                <div class="text-2xl font-bold text-blue-500">${data.defense}</div>
                                <div class="text-xs text-gray-500 dark:text-gray-400">Defense</div>
                            </div>
                            <div>
                                <div class="text-2xl font-bold text-green-500">${data.stamina}</div>
                                <div class="text-xs text-gray-500 dark:text-gray-400">Stamina</div>
                            </div>
                        </div>
                    </div>

                    <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                        <h4 class="font-semibold text-gray-700 dark:text-gray-300 mb-3">Moves</h4>
                        <div class="space-y-2">
                            <div class="flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-800 rounded">
                                <img src="/images/type/${data.fastMove.type}" class="w-5 h-5">
                                <span class="text-sm text-gray-700 dark:text-gray-300">${data.fastMove.name}</span>
                                <span class="ml-auto text-xs text-gray-500 dark:text-gray-400">Fast</span>
                            </div>
                            <div class="flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-800 rounded">
                                <img src="/images/type/${data.chargedMove1.type}" class="w-5 h-5">
                                <span class="text-sm text-gray-700 dark:text-gray-300">${data.chargedMove1.name}</span>
                                <span class="ml-auto text-xs text-gray-500 dark:text-gray-400">Charged</span>
                            </div>
                            ${data.chargedMove2 ? `
                            <div class="flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-800 rounded">
                                <img src="/images/type/${data.chargedMove2.type}" class="w-5 h-5">
                                <span class="text-sm text-gray-700 dark:text-gray-300">${data.chargedMove2.name}</span>
                                <span class="ml-auto text-xs text-gray-500 dark:text-gray-400">Charged</span>
                            </div>
                            ` : ''}
                        </div>
                    </div>

                    <div class="border-t border-gray-200 dark:border-gray-700 pt-4 flex gap-2">
                        <button @click="isOpen = false" class="flex-1 px-4 py-2.5 text-sm font-medium text-gray-700 dark:text-gray-200 bg-gray-100 dark:bg-gray-800 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                            Close
                        </button>
                        <a href="/pvp/pokemon/delete/${data.id}" 
                           onclick="return confirm('Delete this Pokémon?')"
                           class="flex-1 px-4 py-2.5 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 transition-colors text-center">
                            Delete
                        </a>
                    </div>
                </div>
            `;

            // Trigger Alpine modal
            window.dispatchEvent(new CustomEvent('open-details', { detail: data }));
        });
    });
});
</script>
{% endblock %}
